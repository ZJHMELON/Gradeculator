<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionMenuTextColor">@color/text_color</item>
        <item name="android:actionMenuTextAppearance">@style/customActionBar</item>
        <item name="android:textAllCaps">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="customActionBar" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingRight">32sp</item>
    </style>

    <style name="Gradeculator_night" parent="AppTheme" >
        <item name="android:background">@drawable/dark_background</item>
        <item name="android:textColorSecondary">@color/text_color</item>
        <item name="colorPrimaryDark">@color/dark_1st_blue</item>
        <item name="colorAccent">@color/text_color</item>
        <item name="android:textColorPrimaryInverse">@color/text_color</item>
        <item name="android:textColorSecondaryInverse">@color/text_color</item>
        <item name="android:colorForeground">@color/text_color</item>
        <item name="colorPrimary">@color/dark_1st_blue</item>
        <item name="android:colorBackground">@drawable/dark_background</item>
        <item name="android:textColorPrimary">@color/text_color</item>
    </style>

</resources>
