<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:paddingTop="30sp"
        android:orientation="horizontal"
        android:weightSum="8"
        android:layout_width ="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10sp">

        <TextView
            android:text="@string/name_label"
            android:paddingLeft="10sp"
            android:textSize="20sp"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />

        <EditText
            android:gravity="center"
            android:inputType="text"
            android:id="@+id/course_name"
            android:layout_weight="5"
            android:layout_width ="0dp"
            android:layout_height="wrap_content"
            android:hint = "@string/course_name"
            android:textColor="#abaeb2"
        />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>


    <LinearLayout
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:orientation="horizontal"
        android:weightSum="8"
        android:layout_width ="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/title_label"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:layout_weight="3"
            android:layout_width ="0dp"
            android:layout_height="wrap_content"
            />

        <EditText
            android:gravity="center"
            android:layout_weight="5"
            android:layout_width ="0dp"
            android:id="@+id/course_title"
            android:layout_height="wrap_content"
            android:hint = "@string/course_title"
            android:textColor="#abaeb2"
        />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:weightSum="8"
        android:orientation="horizontal"
        android:layout_width ="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/credit_label"
            android:layout_weight="3"
            android:layout_width ="0dp"
            android:paddingLeft="10sp"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            />

        <EditText
            android:id="@+id/credit"
            android:gravity="center"
            android:inputType="number"
            android:text="3"
            android:layout_weight="5"
            android:layout_width ="0dp"
            android:layout_height="wrap_content"
            android:textColor="#abaeb2"
        />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:weightSum="8"
        android:orientation="horizontal"
        android:layout_width ="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/desired_grade_label"
            android:layout_weight="3"
            android:layout_width ="0dp"
            android:paddingLeft="10sp"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            />

        <Spinner
            android:layout_marginLeft="20sp"
            android:layout_weight="5"
            android:layout_width ="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/grade_spinner"
            android:drawSelectorOnTop="true"
            android:clickable="true"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/save_story_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save_button"/>

        <Button
            android:id="@+id/cancel_story_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel_button"/>

    </LinearLayout>

</LinearLayout>